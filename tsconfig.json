{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./lib",
    "moduleResolution": "node",
    "lib": ["es2016", "dom"],
  },
  "include": [
    "src/**/*",
    "lib.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}